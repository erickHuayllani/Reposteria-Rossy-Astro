---
const { product } = Astro.props;
---
<article class="bg-white rounded-2xl shadow p-4 flex flex-col">
  <img src={product.image} alt={product.name} class="rounded-xl h-44 w-full object-cover mb-3" />
  <h3 class="font-semibold">{product.name}</h3>
  <p class="text-sm text-gray-500 flex-1">{product.description}</p>
  <div class="mt-4 flex items-center justify-between">
    <div class="text-lg font-bold">${product.price.toFixed(2)}</div>
    <button class="add-to-cart bg-orange-500 text-white px-3 py-1 rounded-lg" data-id={product.id}>Agregar</button>
  </div>
</article>
