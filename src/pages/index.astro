---
// Homepage
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Inicio - Repostería D'Rossy">
  <link rel="stylesheet" href="/src/styles/index.css" />

  <section class="bg-gradient-to-br from-rose-50 to-yellow-50 rounded-2xl p-8 flex flex-col md:flex-row items-center gap-6">
    <div class="flex-1 text-center md:text-left">
      <!-- Logo -->
      <div class="flex justify-center md:justify-start mb-4">
        <img
          src="/img/image.png"
          alt="Logo Repostería D'Rossy"
          class="w-24 h-24 rounded-full shadow-md hover:scale-105 transition-transform duration-500"
        />
      </div>

      <!-- Texto principal -->
      <h1 class="hero-title">Pastelería artesanal para tus momentos especiales</h1>
      <p class="mt-4 text-gray-700">Pasteles, cupcakes y postres hechos con ingredientes frescos y muchísimo cariño.</p>
      <div class="mt-6 flex gap-3 justify-center md:justify-start">
        <a href="/catalogo" class="px-4 py-2 bg-orange-500 text-white rounded-lg shadow hover:bg-orange-600 transition-colors">Ver catálogo</a>
        <a href="/nosotros" class="px-4 py-2 border rounded-lg hover:bg-gray-100 transition-colors">Conócenos</a>
      </div>
    </div>

    <!-- Imagen lateral principal -->
    <div class="w-80">
      <img src="/img/LocalRossy.png" alt="Local de la pastelería" class="rounded-xl shadow-lg object-cover w-full h-56"/>
    </div>
  </section>

  <section class="mt-10">
    <h2 class="text-2xl font-bold mb-4">Productos destacados</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Producto 1 -->
      <article class="bg-white rounded-2xl shadow p-4 flex flex-col hover:shadow-lg transition-shadow">
        <img src="/img/bob esponja.png" alt="Producto" class="rounded-xl h-44 w-full object-cover mb-3" />
        <h3 class="font-semibold">Pastel de tres leches</h3>
        <p class="text-sm text-gray-500 flex-1">Rico pastel de tres leches con ganache.</p>
        <div class="mt-4 flex items-center justify-between">
          <div class="text-lg font-bold">$55.00</div>
        </div>
      </article>

      <!-- Producto 2 -->
      <article class="bg-white rounded-2xl shadow p-4 flex flex-col hover:shadow-lg transition-shadow">
        <img src="/img/PasttelPVZ.png" alt="Producto" class="rounded-xl h-44 w-full object-cover mb-3" />
        <h3 class="font-semibold">Selva Negra</h3>
        <p class="text-sm text-gray-500 flex-1">Personalizado de PVZ.</p>
        <div class="mt-4 flex items-center justify-between">
          <div class="text-lg font-bold">$58.00</div>
        </div>
      </article>

      <!-- Producto 3 -->
      <article class="bg-white rounded-2xl shadow p-4 flex flex-col hover:shadow-lg transition-shadow">
        <img src="/img/corona.png" alt="Producto" class="rounded-xl h-44 w-full object-cover mb-3" />
        <h3 class="font-semibold">Torta de frutas</h3>
        <p class="text-sm text-gray-500 flex-1">Fresca y ligera.</p>
        <div class="mt-4 flex items-center justify-between">
          <div class="text-lg font-bold">$48.00</div>
        </div>
      </article>
    </div>
  </section>

  <div class="mt-8">
    <script type="module">
      import CartClient from '../components/CartClient.jsx';
    </script>
  </div>
</BaseLayout> 
